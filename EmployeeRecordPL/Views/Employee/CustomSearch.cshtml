@model EmployeeRecordDAL.Entities.CustomSearch

@{
    ViewBag.Title = "Custom Search";
}

<h2>Custom Search</h2>

@{
    // Retrieve data from ViewBag
    var emplooyeList = ViewBag.emplooyeList as IEnumerable<dynamic>;
}

@if (Model != null)
{
    if (Model.Validate != null)
    {
        if (!Model.Validate.MethodStatu)
        {
            <div class="error-container">
                <div class="error-content">
                    <h3 class="custom-h1">Oops! Something went wrong</h3>
                    <p class=".custom-p">@Model.Validate.MethodMessage</p>
                </div>
            </div>
        }
    }
}

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-4">
            Last Name
            @Html.RadioButtonFor(model => model.Option, "LastName")
            Phone
            @Html.RadioButtonFor(model => model.Option, "Phone")
        </div>

        <div class="row col-md-4">
            <label class="col-md-4">Search</label>
            <div class="col-md-8">
                @Html.TextBoxFor(model => model.Value, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group col-md-4">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </div>
}

<br />
@if(emplooyeList != null)
{
    <div class="row">
        @Html.Partial("EmployeeListPartial", emplooyeList)
    </div>
}


